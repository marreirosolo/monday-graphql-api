{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "rootDir": "./lib",
    "outDir": "./dist",
    "moduleDetection": "force",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "exclude": ["dist"],
  "include": ["lib"]
}
