{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es6", "dom"],
    "module": "ESNext",
    "target": "es5",
    "moduleResolution": "node",
    "rootDir": "./lib",
    "outDir": "./dist",
    "moduleDetection": "force",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./lib/**/*"]
}
